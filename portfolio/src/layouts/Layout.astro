---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://use.typekit.net/por2dfz.css" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style lang="scss" is:global>
  html {
    scroll-behavior: smooth;
  }

  main {
    margin-left: 250px;
    padding: 30px 40px;

    @media (max-width: 1000px) {
      margin-left: 0;
      margin-top: 60px;
    }
  }
  $color-nevada: (
    50: #f5f6f6,
    100: #e5e8e8,
    200: #ced3d3,
    300: #abb4b5,
    400: #818d8f,
    500: #626d6f,
    600: #576063,
    700: #4b5153,
    800: #424748,
    900: #3a3e3f,
    950: #242728,
  );

  @function color-nevada($shade) {
    @return map-get($color-nevada, $shade);
  }

  * {
    font-family: "elza", sans-serif;
    font-style: normal;
    padding: 0;
    margin: 0;
    box-sizing: border-box;
  }
</style>
